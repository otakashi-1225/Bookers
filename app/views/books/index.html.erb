<h1>Books</h1>

<table>
	<thead>
	  <tr>
	    <th>Title</th>
	    <th>Body</th>
	  </tr>
	</thead>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", books_path %></td>
    <td><%= link_to "Edit", books_path %></td>
    <td><%= link_to "Destroy", books_path %></td>
  </tr>
<% end %>
</table>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <div class="book-field">
	  <div class="book-title">Title</div>
	  <%= f.text_field :title %>
	</div>

  <div class="book-field">
	  <div class="book-title">Body</div>
	  <%= f.text_area :body %>
	</div>
  <%= f.submit 'Create Book' %>

<% end %>
