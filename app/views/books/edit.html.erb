<div>
  <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="book-field">
	  <div class="book-title">Title</div>
	  <%= f.text_field :title %>
	</div>

  <div class="book-field">
	  <div class="book-title">Body</div>
	  <%= f.text_area :body %>
	</div>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
